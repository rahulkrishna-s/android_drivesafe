<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="ring" android:thickness="12dp" android:useLevel="false">
            <solid android:color="#1A007AFF" /> </shape>
    </item>

    <item android:top="4dp" android:bottom="4dp" android:left="4dp" android:right="4dp">
        <shape android:shape="ring" android:thickness="3dp" android:useLevel="false">
            <gradient
                android:type="sweep"
                android:startColor="#007AFF"
                android:centerColor="#00C8F3"
                android:endColor="#007AFF" />
        </shape>
    </item>

    <item android:top="7dp" android:bottom="7dp" android:left="7dp" android:right="7dp">
        <shape android:shape="ring" android:thickness="1dp" android:useLevel="false">
            <solid android:color="#80FFFFFF" /> </shape>
    </item>
</layer-list>